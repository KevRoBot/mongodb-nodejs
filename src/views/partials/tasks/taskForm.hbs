<div class="card card body p-4 rounded-0 bg-dark text-white">
  <h3>Registro de Producto</h3>
  <form action="tasks/add" method="POST">
    <div>
      <label for="title">Nombre del producto</label>
      <input
        type="String"
        name="title"
        placeholder="nombre del producto"
        id="title"
        class="form-control rounded-0 bg-dark text-white"
      />
    </div>
    <div>
      <label for="titleG">Nombre generico</label>
      <input
        type="String"
        name="titleG"
        placeholder="nombre generico"
        id="titleG"
        class="form-control rounded-0 bg-dark text-white"
      />
    </div>

    <div>
      <label for="precio">precio</label>
      <input
        type="String"
        name="precio"
        placeholder="$ precio"
        id="precio"
        class="form-control rounded-0 bg-dark text-white"
      />
    </div>

    <div>
      <label for="descripcion">categoria\descripcion:</label>
      <textarea
        name="descripcion"
        placeholder="Descripcion"
        id="descripcion"
        class="form-control rounded-0 bg-dark text-white"
      ></textarea>
    </div>

    <div>
      <label for="cantidad">cantidad</label>
      <input
        type="String"
        name="cantidad"
        placeholder="cantidad"
        id="cantidad"
        class="form-control rounded-0 bg-dark text-white"
      />
    </div>

    <button class="btn btn-primary btn-sm mt-2">Agregar</button>
  </form>
</div>