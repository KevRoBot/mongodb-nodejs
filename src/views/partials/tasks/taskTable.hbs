{{#if tasks}}
<table class="table table-bordered table-hover table-dark">
  <thead>
    <tr>
      <th>N.</th>
      <th>title</th>
      <th>titleG</th>
      <th>precio</th>
      <th>descripcion</th>
      <th>cantidad</th>
      <th>operaciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
      <tr>
        <td>{{@index}}</td>
        <td>{{title}}</td>
        <td>{{titleG}}</td>
        <td>{{precio}}</td>
        <td>{{descripcion}}</td>
        <td>{{cantidad}}</td>
        <td>

          {{#if done}}  
          <a href="/tasks/{{_id}}/toggleDone" class="btn btn-danger">Undonet</a>
          {{else}}
          <a href="/tasks/{{_id}}/toggleDone" class="btn btn-success">Listo</a>
          {{/if}}  
          <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Eliminar</a>
          <a href="/tasks/{{_id}}/edit" class="btn btn-warning">Actualizar</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
      <div class="text-center text-dark">
        <h1>
          No hay productos</h1>
          <img src="" alt="">
        
      </div>
{{/if}}